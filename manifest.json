{
  "manifest_version": 2,

  "name": "Fine Reader",
  "description": "A little chrome extension to have a readable content on newspaper website.",
  "version": "1.0",
  "icons": {
      "128": "icon_128.png",
      "16": "icon_16.png",
      "48": "icon_48.png"
   },
  "permissions": [ "activeTab", "tabs", "http://*/*", "https://*/*" ],
  "background": {
    "scripts": ["jquery.min.js","background.js"]
  },
  "browser_action": {
    "default_icon": "off.png",
    "default_title": "Make this page red"
  },
  "web_accessible_resources": ["css/letemps.css"]
}
